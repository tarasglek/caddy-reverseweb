{
	http_port 9080
	https_port 9443
}

(subdomain_template) {
	reverse-bin {args[1]} {args[2]} {
		mode proxy
		reverse_proxy_to :{args[0]}
		readiness_check HEAD /
	}
}

http://python.{$DOMAIN:localhost} {
	bind 0.0.0.0
	import subdomain_template 8001 ./apps/discover-app/discover-app.py :8001
}
# map this wildcard to discover-app.py AI!
http://*.{$DOMAIN:localhost} {
	bind 0.0.0.0
	header Content-Type "text/plain"
	respond "unhandled {scheme}://{host}{uri}" 404
}
